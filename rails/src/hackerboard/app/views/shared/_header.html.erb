<header>
  <%= link_to image_tag("logo.png", alt: "Hackerboard"), home_path %>

  <nav>
    <ul>
      <li>
        <%= link_to t("menu.add_question"), new_question_path %>
      </li>

      <% if logged_in? %>
        <li class="account-info">
          <%= t("user.greeting", name: current_user.name) %>
        </li>

        <li>
          <%= button_to t("menu.logout"), logout_path, method: "delete" %>
        </li>
      <% else %>
        <li><%= link_to t("menu.signup"), signup_path %></li>
        <li><%= link_to t("menu.login"), login_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
