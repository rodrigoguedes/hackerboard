<h1><%= t("titles.login.new") %></h1>
<p><%= t("descriptions.login.new_html", url: signup_path) %></p>

<%= form_with url: login_path do |f| %>
  <p>
    <%= f.label :email, t("form.labels.login.email") %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :password, t("form.labels.login.password") %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit t("form.submit.login") %>
    <%= link_to t("actions.back"), home_path %>
  </p>
<% end %>